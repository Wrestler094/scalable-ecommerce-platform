# ======== APP CONFIG ========
APP_NAME=user-service
APP_VERSION=1.0.0

# ======== HTTP ========
HTTP_PORT=4000

# ======== JWT ========
ACCESS_SECRET=super-secret-string
TOKEN_TTL=900

# ======== LOGGING ========
LOG_LEVEL=debug

# ======== SNOWFLAKE ========
SNOWFLAKE_NODE_ID=1
SNOWFLAKE_EPOCH=1672531200000

# ======== DATABASE (PostgreSQL) ========
DB_HOST_0=user-db-shard-0
DB_HOST_1=user-db-shard-1
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME_0=users_shard_0
DB_NAME_1=users_shard_1

# ======== REDIS ========
REDIS_ADDR=user-redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# ======== FEATURES (internal toggles) ========
METRICS_ENABLED=false
SWAGGER_ENABLED=false
